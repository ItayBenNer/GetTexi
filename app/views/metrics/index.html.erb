<h1>Listing metrics</h1>

<table>
  <thead>
    <tr>
      <th>N</th>
      <th>V</th>
      <th>T</th>
      <th>Lat</th>
      <th>Lon</th>
      <th>Ts</th>
      <th>Driver</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @metrics.each do |metric| %>
      <tr>
        <td><%= metric.n %></td>
        <td><%= metric.v %></td>
        <td><%= metric.t %></td>
        <td><%= metric.lat %></td>
        <td><%= metric.lon %></td>
        <td><%= metric.ts %></td>
        <td><%= metric.driver_id %></td>
        <td><%= link_to 'Show', metric %></td>
        <td><%= link_to 'Edit', edit_metric_path(metric) %></td>
        <td><%= link_to 'Destroy', metric, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

